<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demolaunchmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicAndroidDay2">

        <activity
            android:name=".CStandardActivity"
            android:label="Standard C"
            android:launchMode="standard" />
        <activity
            android:name=".BStandardActivity"
            android:label="Standard B"
            android:launchMode="standard" />
        <activity
            android:name=".AStandardActivity"
            android:exported="true"
            android:label="Standard A"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ASingleTopActivity"
            android:exported="true"
            android:label="Single Top A"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ASingleTaskActivity"
            android:exported="true"
            android:label="Single Task A"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ASingleInstanceActivity"
            android:exported="true"
            android:label="Single Instance A"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".CSingleTopActivity"
            android:label="Single Top C"
            android:launchMode="singleTop" />
        <activity
            android:name=".BSingleTopActivity"
            android:label="Single Top B"
            android:launchMode="singleTop" />

        <activity
            android:name=".CSingleTaskActivity"
            android:label="Single Task C"
            android:launchMode="singleTask" />
        <activity
            android:name=".BSingleTaskActivity"
            android:label="Single Task B"
            android:launchMode="singleTask" />

        <activity
            android:name=".CSingleInstanceActivity"
            android:label="Single Instance C"
            android:launchMode="singleInstance" />
        <activity
            android:name=".BSingleInstanceActivity"
            android:label="Single Instance B"
            android:launchMode="singleInstance" />
    </application>

</manifest>